<h1>Mostrar usuario</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Password</th>
            <th> Editar/Borrar</th>
        </tr>
    </thead>
    <tbody>
       <% usuarios.forEach((usuario)=>{ %>
        <tr>
            <td><%= usuario.id %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.usuario %></td>
            <td><%= usuario.password %></td>
            <td><a href="/modificarUsuario/<%= usuario.id %>">Editar</a> / 
                <a href="/borradoLogicoUsuario/<%= usuario.id %>">Borrado logico</a> / 
                <a href="/borradoFisicooUsuario/<%= usuario.id %>">Borrado fisico</a> </td>
        </tr>
    <% }); %>
    </tbody>
</table>

